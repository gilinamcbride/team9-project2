<article class="post">
  <a href="/blog/{{id}}">
    <div class="title">
      <div>{{title}}</div>
      <div id="city_location">{{city_location}}</div>
    </div>
    <div class="meta">
      By
      {{user.username}}
      on
      {{format_date created_at}}
      |
      {{comments.length}}
      {{format_plural "comment" comments.length}}
    </div>
  </a>
</article>