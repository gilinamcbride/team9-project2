<article class="post">
  <div class="title">
    <span>({{post.title}})</span>
  </div>
  <div class="meta">
    By {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/blog/{{id}}">{{comments.length}} comment(s)</a>
  </div>
</article>
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>