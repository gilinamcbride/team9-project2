<ol class="post-list">
    {{#each blogPosts}}
    <li>
        <article class="post">
        <div class="title">
            <span>({{title}})</span>
            <span>City - ({{city_location}})</span>
        </div>
        <div class="meta">
            By {{user.username}} on {{created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
        </article>
    </li>
    {{/each}}
</ol>